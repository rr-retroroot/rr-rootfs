#!/bin/bash

# "base" package
# https://gitlab.archlinux.org/archlinux/packaging/packages/base/-/blob/main/PKGBUILD?ref_type=heads
export RR_PACKAGES=${RR_PACKAGES}" \
  base
"

# extra utilites
export RR_PACKAGES=${RR_PACKAGES}" \
  run-parts \
  mkinitcpio \
  fakeroot \
  net-tools \
  dosfstools \
  bash-completion \
  sudo \
  nano \
  wget \
  less \
  openssh \
  strace \
  unzip \
  vsftpd \
  inetutils \
  iwd \
  wireless-regdb \
  alsa-utils \
  fbset
"

