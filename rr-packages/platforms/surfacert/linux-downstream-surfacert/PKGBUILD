# TODO: fixme:
# sudo ln -s /usr/lib/libmpfr.so /usr/lib/libmpfr.so.4
# CONFIG_ARM_UNWIND is not set
# ar: /usr/lib/libstdc++.so.6: version `GLIBCXX_3.4.30' not found (required by /usr/bin/../bin/../lib/bfd-plugins/LLVMgold.so)

pkgname=linux-downstream-surfacert
pkgver=3.4.113
pkgrel=1
pkgdesc="RetroRoot surfacert kernel"
arch=('armv7h')
license=('GPL')
commit="6d33401a6d36e954593b6bc07c29f1eedeaf240f"
url="https://github.com/Open-Surface-RT/android_kernel_nvidia_tegra3/archive/${commit}.tar.gz"

# every retroroot pkg must be a member of "retroroot" AND "game", "emulator", "app" or "system" group
groups=('retroroot' 'system' 'surfacert')

depends=('coreutils' 'mkinitcpio>=0.7')
makedepends=('base-devel')
options=(!debug !strip)

source=(
  "$url"
  "config-surfacert"
  "sd8797_uapsta.bin"
  "001-overlayfs.patch"
  "002-sd8xxx.patch"
  "003-fix-gcc12-noreturn.patch"
  "004-fix-gcc12.patch"
  #"https://releases.linaro.org/components/toolchain/binaries/4.9-2017.01/arm-linux-gnueabihf/gcc-linaro-4.9.4-2017.01-x86_64_arm-linux-gnueabihf.tar.xz"
)
sha512sums=(
  'SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP'
  #'SKIP'
)

prepare() {
	# unpack gcc 4.9 cross compiler
	#cd "$srcdir"
	#tar xJf gcc-linaro-4.9.4-2017.01-x86_64_arm-linux-gnueabihf.tar.xz

  _builddir="$srcdir/android_kernel_nvidia_tegra3-${commit}"
  cd "$_builddir"
  
  # copy custom config
  cp "$srcdir/config-surfacert" .config
  
  # overlayfs patch
  #echo "overlayfs: patching..."
  #patch -Np1 < "../001-overlayfs.patch"
  
  # sd8xxx patch
  echo "sd8xxx: patching..."
  patch -Np1 < "../002-sd8xxx.patch"
  
	# gcc12 noreturn patch
  echo "gcc12: patching..."
  patch -Np1 < "../003-fix-gcc12-noreturn.patch"

	# gcc12 patch
  echo "gcc12: patching..."
  patch -Np1 < "../004-fix-gcc12.patch"
  
  # armv7h
  export CFLAGS="-march=armv7-a -mfloat-abi=hard -mfpu=neon -O2"
  export CPPFLAGS="-march=armv7-a -mfloat-abi=hard -mfpu=neon -O2"
  export CXXFLAGS="-march=armv7-a -mfloat-abi=hard -mfpu=neon -O2"
  export LDFLAGS=""
  
  make ARCH="arm" oldconfig
  
  # copy firmware
  cp "$srcdir/sd8797_uapsta.bin" "$srcdir/android_kernel_nvidia_tegra3-${commit}/firmware/"
}

build() {
  cd "$srcdir"/android_kernel_nvidia_tegra3-${commit}
  
  # armv7h
  export CFLAGS="-march=armv7-a -mfloat-abi=hard -mfpu=neon -O2 -Wno-error=attributes"
  export CPPFLAGS="-march=armv7-a -mfloat-abi=hard -mfpu=neon -O2 -Wno-error=attributes"
  export CXXFLAGS="-march=armv7-a -mfloat-abi=hard -mfpu=neon -O2 -Wno-error=attributes"
  export LDFLAGS=""
  
  # gcc12 "fix"
  cp include/linux/compiler-gcc5.h include/linux/compiler-gcc12.h
  export CFLAGS_KERNEL="-Wno-attributes -Wno-tautological-compare -Wno-misleading-indentation \
    -Wno-maybe-uninitialized -Wno-unused-const-variable -Wno-error"
  export CFLAGS_MODULE="${CFLAGS_KERNEL}"
  #export KBUILD_CFLAGS_KERNEL="${CFLAGS_KERNEL}"
  #export KBUILD_CFLAGS_MODULE="${CFLAGS_KERNEL}"
  # gcc12 "tegra" fix...
  find . -type f -exec sed -i 's/= -Werror/= -Wno-error/g' {} +
  
  make ARCH="arm" KBUILD_BUILD_VERSION="$((pkgrel + 0))-retroroot"
}

package() {
  cd "$srcdir"/android_kernel_nvidia_tegra3-${commit}
  
  # use gcc4
  #export RETROROOT_HOST=/opt/retroroot/host/armv7h-gcc4
  #source /opt/retroroot/rr-env ${CARCH}
  
  # install kernel image and dtb
  install -d "$pkgdir"/boot
  cp arch/arm/boot/zImage "$pkgdir"/boot/zImage
  
  # install kernel modules
  make ARCH="arm" INSTALL_MOD_PATH="$pkgdir"/usr modules_install
  # remove build and source links
  rm -rf "$pkgdir"/usr/lib/modules/${pkgver}/{source,build}
  
  # TODO: install kernel headers
  #make INSTALL_HDR_PATH="$pkgdir"/usr header_install
  
  # copy surfacert rootfs overlays
  cp -r "$startdir"/overlay/. "${pkgdir}"
}

